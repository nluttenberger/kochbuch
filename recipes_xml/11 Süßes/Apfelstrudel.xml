    <fr:recipeName>Apfelstrudel</fr:recipeName>
    <fr:recipeKeywords>Apfel,Pinienkerne,Zucker</fr:recipeKeywords>
    <fr:recipeIntro>
        <fr:introText>Der Klassiker in einer Variante mit Pinienkernen statt Mandeln: noch leckerer!</fr:introText>
    </fr:recipeIntro>
