  <ns0:recipeName>Mung Dal mit Spinat</ns0:recipeName>
  <ns0:recipeKeywords>Mungbohnen,Spinat,Kokosmilch</ns0:recipeKeywords>
  <ns0:recipeIntro/>
  <ns0:recipeIngredients>
    <ns0:igdtList>
      <ns0:igdtListName/>
