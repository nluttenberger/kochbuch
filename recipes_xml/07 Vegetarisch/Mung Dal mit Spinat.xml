        <ns0:igdtName ref="mungbohnen">Mungbohnen</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>300 g</ns0:igdtQuantity>
        <ns0:igdtName ref="spinat">Blattspinat</ns0:igdtName>
      </ns0:igdtListLine>
