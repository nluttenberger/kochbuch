    <fr:recipeName>Steinpilzravioli an Paprikaschaum</fr:recipeName>
    <fr:recipeKeywords>Steinpilze,Paprika,Salbei</fr:recipeKeywords>
    <fr:recipeIntro>
        <fr:introText>Sind Steinpilze die Trüffeln des kleinen Mannes?</fr:introText>
    </fr:recipeIntro>
    <fr:recipeIngredients>
        <fr:igdtList>
            <fr:igdtListName/>
            <fr:igdtListLine>
                <fr:igdtQuantity/>
                <fr:igdtName ref="">[Nudelteig](recipes/01%20Grundrezepte/Nudelteig.html) von 300 g Mehl</fr:igdtName>
            </fr:igdtListLine>
        </fr:igdtList>
        <fr:igdtList>
            <fr:igdtListName>Füllung</fr:igdtListName>
            <fr:igdtListLine>
                <fr:igdtQuantity>25 g</fr:igdtQuantity>
                <fr:igdtName ref="">getrocknete Steinpilze</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>500 g</fr:igdtQuantity>
                <fr:igdtName ref="">Ricotta Doppelrahmstufe</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>100 g</fr:igdtQuantity>
                <fr:igdtName ref="">Parmesan</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>15</fr:igdtQuantity>
                <fr:igdtName ref="">schwarze Oliven ohne Kern</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>2 EL</fr:igdtQuantity>
                <fr:igdtName ref="">gehackte Mandeln</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity/>
                <fr:igdtName ref="">Muskat</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity/>
                <fr:igdtName ref="">Chili</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity/>
                <fr:igdtName ref="">Salz, Pfeffer</fr:igdtName>
            </fr:igdtListLine>
        </fr:igdtList>
        <fr:igdtList>
            <fr:igdtListName>Paprikaschaum</fr:igdtListName>
            <fr:igdtListLine>
                <fr:igdtQuantity>4</fr:igdtQuantity>
                <fr:igdtName ref="">rote Paprika</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>1</fr:igdtQuantity>
                <fr:igdtName ref="">Zwiebel</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>5 Blätter</fr:igdtQuantity>
                <fr:igdtName ref="">Salbei</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>100 ml</fr:igdtQuantity>
                <fr:igdtName ref="">trockener Weißwein</fr:igdtName>
            </fr:igdtListLine>
