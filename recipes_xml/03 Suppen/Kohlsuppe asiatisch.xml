    <fr:recipeName>Kohlsuppe asiatisch</fr:recipeName>
    <fr:recipeKeywords>Weißkohl,Paprika,Ingwer,Blumenkohl,Passierte Tomaten</fr:recipeKeywords>
    <fr:recipeIntro/>
