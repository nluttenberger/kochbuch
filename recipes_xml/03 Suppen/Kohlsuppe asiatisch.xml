                <fr:igdtName ref="">Möhren</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>1</fr:igdtQuantity>
                <fr:igdtName ref="">Petersilienwurzel</fr:igdtName>
            </fr:igdtListLine>
